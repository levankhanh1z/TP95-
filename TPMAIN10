local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = game.Players.LocalPlayer

local curCapacity = ReplicatedStorage:WaitForChild("CurCapacity")
local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")

local function setHealthToZero()
    if curCapacity.Value >= 35000 then
        humanoid.Health = 0

        -- Chờ cho đến khi CurCapacity trở về 0 để lặp lại hành động
        repeat
            wait()
        until curCapacity.Value <= 1100

        -- Đợi một khoảng thời gian ngắn trước khi lặp lại hành động
        wait(50)
        setHealthToZero()
    end
end

-- Bắt đầu kiểm tra và đặt Health
setHealthToZero()
