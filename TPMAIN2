local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = game.Players.LocalPlayer

local curCapacity = ReplicatedStorage:WaitForChild("CurCapacity")
local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")

local function setHealthToZero()
    if humanoid and curCapacity.Value >= 114000 then
        humanoid.Health = 0

        -- Đợi cho đến khi CurCapacity trở về 0 để lặp lại
        repeat
            wait()
        until curCapacity.Value == 0
    end
end

-- Lặp lại việc kiểm tra và đặt Health
while true do
    setHealthToZero()
end
